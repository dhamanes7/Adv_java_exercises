<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginPage.MainPage">

<VerticalStackLayout Margin="15" Padding="30, 60, 30, 30">
        <Label Text="Please log in" FontSize="30" TextColor="DarkBlue"/>
        <Label  Text="Enter Username" TextColor="Black" />
        <Entry x:Name="Username" />
        <Label  Text="Enter Password" TextColor="Black" />
        <Entry x:Name="Password" IsPassword="True" />
        <Button x:Name="Login" Text="Login" BackgroundColor="#0094FF" Clicked="LoginButton_Clicked" />
    </VerticalStackLayout>

</ContentPage>

